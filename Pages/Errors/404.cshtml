@page
@model _234412H_AS2.Pages.Errors._404Model
@{
    ViewData["Title"] = "404 - Page Not Found";
}

<div class="container error-container">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="error-content">
                <div class="error-code">
                    <h1 class="display-1">4<span class="text-primary">0</span>4</h1>
                </div>

                <div class="error-message">
                    <h2 class="mb-4">Oops! Page Not Found</h2>
                    <p class="lead text-muted">
                        The page you're looking for seems to have vanished into thin air.
                    </p>
                </div>

                <div class="error-details mt-4">
                    <p class="text-muted">
                        You might have mistyped the address or the page may have moved.
                    </p>
                </div>

                <div class="error-actions mt-5">
                    <a asp-page="/Index" class="btn btn-primary btn-lg me-3">
                        <i class="bi bi-house-door"></i> Return Home
                    </a>
                    <button onclick="history.back()" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-arrow-left"></i> Go Back
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .error-container {
        padding: 80px 0;
        min-height: 70vh;
        display: flex;
        align-items: center;
    }

    .error-content {
        padding: 30px;
    }

    .error-code {
        margin-bottom: 30px;
    }

    .error-code h1 {
        font-size: 150px;
        font-weight: bold;
        text-shadow: 4px 4px 0px rgba(0,0,0,0.1);
    }

    .error-message h2 {
        font-size: 2.5rem;
        color: #333;
    }

    .error-actions .btn {
        padding: 12px 30px;
        border-radius: 50px;
    }

    .error-actions .btn i {
        margin-right: 8px;
    }
</style>
